{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "allowJs": false,
    "checkJs": false,
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": true
  },
  "exclude": ["node_modules", "dist"]
}
